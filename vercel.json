{
  "functions": {
    "api/**.ts": {
      "maxDuration": 120
    }
  },
  "crons": [
    {
      "path": "/api/cron/hourly",
      "schedule": "0 0 * * *"
    }
  ],
  "build": {
    "env": {
      "NODE_OPTIONS": "--experimental-specifier-resolution=node"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ]
}
